set guioptions-=T

set guioptions-=l
set guioptions-=L
set guioptions-=r
set guioptions-=R

"显示行号
set number
"黏贴 不缩进
"set paste
"ctags 设置
set tags=./tags,tags

"设置空格核缩进的提示
set list
set listchars=tab:\|-,trail:=,extends:>,precedes:<
"启动时不显示提示
set shortmess=atI

